{
  "name": "@piscada/snackbar",
  "version": "1.0.6",
  "description": "Simple JS snackbar. Supports all JS-frameworks.",
  "main": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "prepare": "npm run build",
    "test": "jest --config jestconfig.json",
    "clean": "rimraf dist/",
    "copy-files": "copyfiles -u 1 src/**/*.css dist/",
    "build": "npm run clean && tsc && npm run copy-files",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "author": "Yeloman",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://bitbucket.org/teampiscadacloud/piscada-snackbar.git"
  },
  "keywords": [
    "snackbar",
    "piscada"
  ],
  "devDependencies": {
    "@types/jest": "^29.2.0",
    "jest": "^29.2.2",
    "jest-environment-jsdom": "^29.2.2",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.3",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.5.5"
  },
  "homepage": "https://bitbucket.org/teampiscadacloud/piscada-snackbar#readme",
  "bugs": {
    "url": "https://bitbucket.org/teampiscadacloud/piscada-snackbar/issues"
  },
  "files": [
    "dist/**/*"
  ]
}
